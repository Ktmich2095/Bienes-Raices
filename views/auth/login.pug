extends ../layout/index

block contenido
    .py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            sapn.font-normal Raíces
        h2.text-center.text-2xl.font-extrabold=pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold.rounded.lg=error.msg


        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/login")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="email") Tu Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder="Email" type="email" name="email")
                    div 
                        label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="password") Tu Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder="Password" type="password" name="password")
                    
                    .flex.item-center.justify-between 
                        a.text-gray-500.text-xs(href="/auth/registro") ¿No tienes cuenta? Crea una
                        a.text-gray-500.text-xs(href="/auth/olvide_password") Olvide mi password 
                    
                    input(class="w-full bg-sky-700 hover:bg-sky-900 text-white font-bold py-3 cursor-pointer" type="submit" value="Iniciar Sesión")
                    
